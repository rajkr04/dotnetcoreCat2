@page
@model EmployeeWeb.Pages.Employee.EntryModel
@{}


<h2 class="text-info pt-2 pb-3">Add new employee</h2>  
  
<div class="row backgroundWhite border">  
  
    <div class="col-md-8">  
        <form method="post">  
            <div asp-validation-summary="All" class="text-danger"></div>  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.Name"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.Name" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.Name" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.EmailId"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.EmailId" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.EmailId" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.Mobile"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.Mobile" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.Mobile" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.EmpAddress"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.EmpAddress" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.EmpAddress" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.Dept"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.Dept" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.Dept" class="text-danger"></span>  
                </div>  
            </div>  
  
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                        <label asp-for="EmployeeDto.Salary"></label>  
                    </div>  
                    <div class="col-8">  
                        <input asp-for="EmployeeDto.Salary" class="form-control" />  
                    </div>  
                    <span asp-validation-for="EmployeeDto.Salary" class="text-danger"></span>  
                </div>  
            </div>                              
            <div class="form-group">  
                <div class="row">  
                    <div class="col-4">  
                          
                    </div>  
                    <div class="col-8">  
                        <button type="submit" class="btn btn-success form-control">Register</button>  
                    </div>  
                      
                </div>  
            </div>  
        </form>  
    </div>  
  
</div> 

